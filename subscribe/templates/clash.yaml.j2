{%- import 'macros.j2' as macros with context -%}
port: 1090
socks-port: 1080
allow-lan: false
mode: Rule
log-level: info
external-controller: 127.0.0.1:9090
cfw-latency-url: http://www.gstatic.com/generate_204
Proxy:
{%- block proxy %}
{%- for proxy in macros.proxies %}
{{- macros.marshal_proxy(proxy, client='clash') }}
{%- endfor %}
{%- endblock %}
Proxy Group:
{%- block proxy_group %}
  - { name: PROXY, type: select, proxies: [{{ cfg.extras.names }}] }
  - { name: APPLE, type: select, proxies: [PROXY, DIRECT] }
  - { name: MEDIA, type: select, proxies: [PROXY, MANUAL] }
  - { name: ADRULE, type: select, proxies: [DIRECT, REJECT] }
  - { name: CNRULE, type: select, proxies: [DIRECT{% for proxy in proxies %}{% if proxy.node.iso == 'CN' %}, {{ proxy.node }}{% endif %}{% endfor %}] }
  - { name: MYRULE, type: select, proxies: [DIRECT, PROXY] }
{%- for policy in macros.policies %}
{{- macros.marshal_policy(policy, client='clash') }}
{%- endfor %}
{%- endblock %}
Rule:
  # Custom Rules
  - DOMAIN-SUFFIX,12x.me,MYRULE
  - DOMAIN-SUFFIX,xjasonlyu.com,MYRULE
  # Reject List
{{ 'ADRULE'| surge2clash('https://ruleset.dev/surge3_reject', 'https://ruleset.dev/surge3_reject-tinygif') | format_seq('  - {}', '\n') }}
  # Media Services
{{ 'MEDIA' | surge2clash('https://ruleset.dev/surge3_stream_services') | format_seq('  - {}', '\n') }}
  # Apple Services
{{ 'APPLE' | surge2clash('https://ruleset.dev/surge3_apple_services') | format_seq('  - {}', '\n') }}
  # Global Proxy
{{ 'PROXY' | surge2clash('https://ruleset.dev/surge3_global_plus', 'https://ruleset.dev/surge3_global') | format_seq('  - {}', '\n') }}
  # China Sites
{{ 'CNRULE'| surge2clash('https://ruleset.dev/surge3_domestic') | format_seq('  - {}', '\n') }}
  # Private Network
  - DOMAIN-SUFFIX,local,DIRECT
  - IP-CIDR,127.0.0.0/8,DIRECT
  - IP-CIDR,172.16.0.0/12,DIRECT
  - IP-CIDR,192.168.0.0/16,DIRECT
  - IP-CIDR,10.0.0.0/8,DIRECT
  - IP-CIDR,100.64.0.0/10,DIRECT
  # GeoIP CN
  - GEOIP,CN,CNRULE
  # Final Rule
  - MATCH,PROXY
